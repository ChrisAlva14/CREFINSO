@page "/"

<div class="ml-64 flex flex-col h-screen">
    <!-- Header -->
    <header class="flex items-center justify-between px-6 py-4 bg-white shadow">
        <h1 class="text-2xl font-semibold text-gray-800">Dashboard</h1>
        <div class="flex items-center space-x-4 relative">
            <!-- Buscar -->
            <div class="relative">
                <input type="text" placeholder="Buscar..." class="pl-10 pr-4 py-2 rounded-full bg-gray-100 border border-gray-300 focus:ring focus:outline-none">
                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M21 21l-6-6M10 18a8 8 0 100-16 8 8 0 000 16z"></path>
                </svg>
            </div>

            <!-- Icono de Usuario con Menú Desplegable -->
            <div class="relative">
                <button id="user-menu" onclick="toggleMenu()" class="p-2 rounded-full focus:outline-none" type="button"  
                    aria-expanded="false" aria-haspopup="true">
                    <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                </button>

                <!-- Menú del Usuario con posicionamiento corregido -->
                <div id="menu-dropdown" class="absolute right-0 mt-2 w-56 z-50 bg-white border border-gray-200 rounded-md shadow-lg hidden">
                    <div class="px-2 py-1.5 text-sm font-normal">
                        <div class="flex flex-col space-y-1">
                            <p class="text-sm font-medium leading-none">Usuario</p>
                            <p class="text-xs leading-none text-gray-500">usuario@crefinso.com</p>
                        </div>
                    </div>
                    <div role="separator" aria-orientation="horizontal" class="border-t my-1"></div>
                    <div role="menuitem" class="cursor-pointer px-4 py-3 text-sm hover:bg-gray-100">Perfil</div>
                    <div role="menuitem" class="cursor-pointer px-4 py-3 text-sm hover:bg-gray-100">Configuración</div>
                </div>
            </div>
        </div>
    </header>

    <!-- Dashboard content -->
    <main class="p-6 flex-1 overflow-y-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Cards or charts -->
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-lg font-semibold">Stat 1</h2>
                <p class="mt-4 text-2xl">345</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-lg font-semibold">Stat 2</h2>
                <p class="mt-4 text-2xl">678</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-lg font-semibold">Stat 3</h2>
                <p class="mt-4 text-2xl">123</p>
            </div>
        </div>
    </main>
</div>

<script>
    function toggleMenu() {
        const menu = document.getElementById('menu-dropdown');
        menu.classList.toggle('hidden');
    }
</script>
