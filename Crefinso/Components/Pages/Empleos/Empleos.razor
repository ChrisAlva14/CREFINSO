@page "/jobs"
@inject IJSRuntime JS
@inject SweetAlertService Swal
@inject JobServices jobService
@inject AuthServices authServices

@using Crefinso.DTOs
@using Crefinso.Services
@using Crefinso.Services.Empleos

@code {
    private List<EmpleoResponse> empleos;
    private EmpleoResponse editingJob = null;
    private EmpleoResponse detailsJob = null;

    private string errorMessage;
    private bool isLoading = true;
    private bool isAuthenticated;
    private bool isEditModalVisible = false;
    private bool isDetailsModalVisible = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isAuthenticated = await authServices.IsAuthenticatedAsync();
            StateHasChanged();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await JS.InvokeVoidAsync("mostrarAlertaCargando");
            await Task.Delay(1125);

            empleos = await jobService.GetJobs();

            isLoading = false;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    // MODIFICAR EMPLEO
    private void StartEditJob(EmpleoResponse job)
    {
        editingJob = job;
        isEditModalVisible = true;
    }

    private async Task HandleEditJob()
    {
        try
        {
            bool success = await jobService.UpdateJob(editingJob);
            if (success)
            {
                empleos = await jobService.GetJobs();
                CloseEditModal();
                await Swal.FireAsync("Éxito", "Empleo actualizado correctamente", SweetAlertIcon.Success);
            }
            else
            {
                await Swal.FireAsync("Error", "No se pudo actualizar el empleo", SweetAlertIcon.Error);
            }
        }
        catch (Exception ex)
        {
            await Swal.FireAsync("Error", $"Hubo un error al actualizar el empleo: {ex.Message}", SweetAlertIcon.Error);
        }
    }

    private void CloseEditModal()
    {
        editingJob = null;
        isEditModalVisible = false;
    }

    // ELIMINAR EMPLEO
    private async Task ConfirmDeleteJob(int jobId)
    {
        var result = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "¿Estás seguro?",
                Text = "Esta acción no se puede deshacer",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, eliminar",
                CancelButtonText = "Cancelar"
            });

        if (result.IsConfirmed)
        {
            await DeleteJob(jobId);
        }
    }

    private async Task DeleteJob(int jobId)
    {
        try
        {
            bool success = await jobService.DeleteJob(jobId);
            if (success)
            {
                empleos = await jobService.GetJobs();
                await Swal.FireAsync("Éxito", "Empleo eliminado correctamente", SweetAlertIcon.Success);
            }
            else
            {
                await Swal.FireAsync("Error", "No se pudo eliminar el empleo", SweetAlertIcon.Error);
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            await Swal.FireAsync("Error", "Hubo un error al eliminar el empleo", SweetAlertIcon.Error);
        }
    }

    // VER DETALLES DEL EMPLEO
    private async Task DetailsJob(int jobId)
    {
        try
        {
            detailsJob = await jobService.GetJobById(jobId);
            isDetailsModalVisible = true;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            await Swal.FireAsync("Error", "Hubo un error al obtener los detalles del empleo", SweetAlertIcon.Error);
        }
    }

    private void CloseDetailsModal()
    {
        detailsJob = null;
        isDetailsModalVisible = false;
    }
}

