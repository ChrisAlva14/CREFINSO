<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <link rel="stylesheet" href="app.min.css" />
    <link rel="stylesheet" href="Crefinso.styles.css" />
    <link rel="stylesheet" href="styles.css" />
    <link rel="icon" type="image/png" href="logoCrefinsodark.png" />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>


    <!-- HeadOutlet (Blazor-specific) -->
    <HeadOutlet @rendermode="InteractiveServer" />

</head>

<body>
    <!-- Enrutamiento para Blazor -->
    <Routes @rendermode="InteractiveServer" />

    <!-- Scripts -->
    <script src="_framework/blazor.web.js"></script>
    <script src="_content/CurrieTechnologies.Razor.SweetAlert2/sweetAlert2.min.js"></script>
    <script src="js/site.js"></script>
    <script>
        // Alternar el modo oscuro y cambiar el logo
        function toggleDarkMode() {
            const isDarkMode = document.documentElement.classList.toggle('dark-mode');
            localStorage.setItem('darkMode', isDarkMode ? 'enabled' : 'disabled');

            // Obtener el logo y cambiar el src
            const logo = document.getElementById('logo');
            if (isDarkMode) {
                logo.src = 'logoCrefinsodark.png';  // Logo con letras blancas
            } else {
                logo.src = 'logoCrefinsowhite.png'; // Logo con letras negras
            }
        }

        // Al cargar la página, aplicar el modo oscuro si está habilitado en localStorage
        document.addEventListener('DOMContentLoaded', () => {
            const darkMode = localStorage.getItem('darkMode');
            const logo = document.getElementById('logo');

            if (darkMode === 'enabled') {
                document.documentElement.classList.add('dark-mode');
                logo.src = 'logoCrefinsodark.png';  // Logo con letras blancas
            } else {
                logo.src = 'logoCrefinsowhite.png'; // Logo con letras negras
            }
        });
    </script>
</body>

</html>

