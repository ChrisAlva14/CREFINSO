    <script>
        // Alternar el modo oscuro y cambiar el logo
        function toggleDarkMode() {
            const isDarkMode = document.documentElement.classList.toggle('dark-mode');
            localStorage.setItem('darkMode', isDarkMode ? 'enabled' : 'disabled');

            // Obtener el logo y cambiar el src
            const logo = document.getElementById('logo');
            if (logo) {
                if (isDarkMode) {
                    logo.src = 'logoCrefinsodark.png';  // Logo con letras blancas
                } else {
                    logo.src = 'logoCrefinsowhite.png'; // Logo con letras negras
                }
            }
        }

        // Al cargar la página, aplicar el modo oscuro si está habilitado en localStorage
        document.addEventListener('DOMContentLoaded', () => {
            const darkMode = localStorage.getItem('darkMode');
            const logo = document.getElementById('logo');

            if (darkMode === 'enabled') {
                document.documentElement.classList.add('dark-mode');
                if (logo) {
                    logo.src = 'logoCrefinsodark.png';  // Logo con letras blancas
                }
            } else {
                if (logo) {
                    logo.src = 'logoCrefinsowhite.png'; // Logo con letras negras
                }
            }
        });

        // Observar cambios en el DOM para asegurarse de que el logo se actualice si se carga dinámicamente
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.type === 'childList') {
                    const darkMode = localStorage.getItem('darkMode');
                    const logo = document.getElementById('logo');

                    if (darkMode === 'enabled') {
                        document.documentElement.classList.add('dark-mode');
                        if (logo) {
                            logo.src = 'logoCrefinsodark.png';  // Logo con letras blancas
                        }
                    } else {
                        if (logo) {
                            logo.src = 'logoCrefinsowhite.png'; // Logo con letras negras
                        }
                    }
                }
            });
        });

        observer.observe(document.body, { childList: true, subtree: true });
    </script>


</body>

</html>