<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <!-- Estilos -->
    <link rel="stylesheet" href="app.min.css" />
    <link rel="stylesheet" href="Crefinso.styles.css" />
    <link rel="stylesheet" href="styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- HeadOutlet (Blazor-specific) -->
    <HeadOutlet />

</head>

<body class="bg-background  transition-opacity duration-300" >
    <!-- Enrutamiento para Blazor -->
    <Routes />

    <!-- Scripts -->
    <script src="_framework/blazor.web.js"></script>
    <script>
        // Alternar el modo oscuro y guardar la preferencia en localStorage
        function toggleDarkMode() {
            const isDarkMode = document.documentElement.classList.toggle('dark-mode');
            localStorage.setItem('darkMode', isDarkMode ? 'enabled' : 'disabled');
        }

        // Al cargar la página, aplicar el modo oscuro si está habilitado en localStorage
        document.addEventListener('DOMContentLoaded', () => {
            const darkMode = localStorage.getItem('darkMode');
            if (darkMode === 'enabled') {
                document.documentElement.classList.add('dark-mode');
            }
        });
    </script>
</body>

</html>
