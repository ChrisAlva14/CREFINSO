@inherits LayoutComponentBase

<div class="page flex">
    <!-- Sidebar -->
    <aside class="bg-white shadow-lg transform transition-transform duration-300 ease-in-out lg:translate-x-0 flex flex-col">
        <NavMenu />
    </aside>

    <!-- Main content -->
    <div class="flex-1 flex flex-col">
        <main class="flex-1 overflow-x-hidden overflow-y-auto">
            @Body
        </main>
    </div>
</div>

<!-- Error UI -->
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
