@inherits LayoutComponentBase

<div class="page flex">
    <!-- Sidebar -->
    
        <NavMenu />
    
    <!-- Main content -->
    <div class="ml-64 flex flex-col w-screen">
        <!-- Header -->
        <header class="flex items-center justify-between px-6 py-4 bg-white shadow">
            <h1 class="text-2xl font-semibold text-gray-800">Dashboard</h1>
            <div class="flex items-center space-x-4 relative">

                <!-- Buscar -->
                <div class="relative">
                    <input type="text" placeholder="Buscar..." class="pl-10 pr-4 py-2 rounded-full bg-gray-100 border border-gray-300 focus:ring focus:outline-none">
                    <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M21 21l-6-6M10 18a8 8 0 100-16 8 8 0 000 16z"></path>
                    </svg>
                </div>

                <!-- Menú de Usuario -->
                <div class="relative">
                    <button id="user-menu" onclick="toggleMenu()" class="p-2 rounded-full focus:outline-none">
                        <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="Usuario">
                    </button>

                    <!-- Menú desplegable -->
                    <div id="menu-dropdown" class="absolute right-0 mt-2 w-56 z-50 bg-white border border-gray-200 rounded-md shadow-lg hidden">
                        <div class="px-2 py-1.5 text-sm font-normal">
                            <div class="flex flex-col space-y-1">
                                <p class="text-sm font-medium">Usuario</p>
                                <p class="text-xs text-gray-500">usuario@crefinso.com</p>
                            </div>
                        </div>
                        <div role="separator" class="border-t my-1"></div>
                        <div class="perfil cursor-pointer px-4 py-3 text-sm hover:bg-gray-100">Perfil</div>
                        <div class="perfil cursor-pointer px-4 py-3 text-sm hover:bg-gray-100">Configuración</div>
                    </div>
                </div>

                <!-- Botón para modo oscuro -->
                <div class="relative">
                    <button onclick="toggleDarkMode()">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 8.998-5.998Z" />
                        </svg>
                    </button>
                </div>
            </div>
        </header>

        <main>
            @Body
        </main>
    </div>
</div>

<!-- Error UI -->
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
